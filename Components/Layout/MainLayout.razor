@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="BlazorApp.styles.css" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
<component type="typeof(App)" render-mode="ServerPrerendered">
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>
    
        <main class="d-flex flex-column justify-content-between">
            <article class="content px-2">
                @Body
            </article>
            <div class="d-flex flex-row justify-content-between border border-2">
                <div class="px-4">
                    <div class="d-flex flex-column justify-content-between mb-2 mt-2">
                        <div>
                            Contact the Office of Financial Aid:
                        </div>
                        <div>
                            Email: finaid@stmartin.edu
                        </div>
                        <div>
                            Phone: 360-688-2150; Text: 360-995-1008
                        </div>
                    </div>
                </div>
                <div class="px-4 s-flex flex-column align-content-center">
                    <img src="Saint-Martins-logo.svg" alt="Saint Martin's Logo" height="50"/>
                </div>
            </div>
        </main>
    </div>
</component>
<script src="_framework/blazor.server.js"></script>
</body>
</html>
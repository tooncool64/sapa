@page "/"
@using Microsoft.Extensions.Options
@inject IOptionsSnapshot<HomePageOptions> PageOptions

<PageTitle>@options.Title</PageTitle>

<div>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@options.Title</title>
        <link rel="stylesheet" href="Home.css"/>
        <script src="Home.js"></script>
    </head>
    <body>
        <!-- Language Toggle Button -->
        <button id="toggle-button" class="lang-toggle" onclick="toggleLanguage()">Español</button>

        <main>
            <!-- Hero Section -->
            <section class="hero">
                <h1 id="sap-title">@options.Title</h1>
                <p id="sap-intro1">@options.IntroText1</p>
                <p id="sap-intro2">@options.IntroText2</p>
            </section>

            <!-- Maintaining Eligibility -->
            <section id="maintaining-eligibility" class="content-card">
                <h2 id="eligibility-title">@options.EligibilityTitle</h2>
                <p id="eligibility-text">@options.EligibilityText</p>
            </section>

            <!-- SAP Status -->
            <section id="sap-status" class="content-card">
                <h2 id="sap-status-title">@options.SapStatusTitle</h2>
                <h4 id="warning-title">@options.WarningTitle</h4>
                <p id="warning-text">@options.WarningText</p>
                <h4 id="must-appeal-title">@options.MustAppealTitle</h4>
                <p id="must-appeal-text">@options.MustAppealText</p>
                <p id="must-appeal-extra">@options.MustAppealExtra</p>
            </section>

            <!-- Appeal Process -->
            <section id="appeal-process" class="content-card">
                <h2 id="appeal-process-title">@options.AppealProcessTitle</h2>
                <p id="appeal-text">@options.AppealText</p>

                <h4 id="approved-appeals-title">@options.ApprovedAppealsTitle</h4>
                <p id="approved-appeals-text">@options.ApprovedAppealsText</p>

                <h4 id="denied-appeals-title">@options.DeniedAppealsTitle</h4>
                <p id="denied-appeals-text">@options.DeniedAppealsText</p>
                <p id="denied-extra">@options.DeniedExtra</p>
            </section>
        </main>

        <p id="final-note" class="fw-bolder">
            @options.FinalNote
        </p>
    </body>
</div>

@code {
    private HomePageOptions options = new();

    protected override void OnInitialized()
    {
        // Get the options from the injected IOptionsSnapshot
        options = PageOptions.Value;
    }
}
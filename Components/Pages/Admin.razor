@page "/admin"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin Dashboard</PageTitle>

<h3>Admin Page</h3>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible"
          content="IE=edge">
    <meta name="viewport" 
          content="width=device-width, 
                   initial-scale=1.0">
    <title>Admin page</title>
    <link rel="stylesheet" 
          href="style.css">
    <link rel="stylesheet" 
          href="responsive.css">
</head>

<body>
  
   
    <header>

        <div class="logosec">
            <div class="logo">Admin page</div>
          
        </div>

        <div class="searchbar">
            <input type="text" 
                   placeholder="Search">
            <div class="searchbtn">
             
            
        </div>

        <div class="message">
            <div class="circle"></div>

            <div class="dp">
        
              </div>
      

    </header>

    <div class="main-container">
        <div class="navcontainer">
            <nav class="nav">
                <div class="nav-upper-options">
                    <div class="nav-option option1">
                       
                        <h3> Dashboard</h3>
                    </div>

                    <div class="option2 nav-option">
                        <img src=
                            class="nav-img" 
                            alt="articles">
                        <h3> apeals</h3>
                    </div>

                    <div class="nav-option option3">
                        <img src=
                            class="nav-img" 
                            alt="report">
                        <h3> status update</h3>
                    </div>

                    <div class="nav-option option5">
                        
                        <h3> Profile</h3>
                    </div>

                    <div class="nav-option logout">
                   
                        <h3>Logout</h3>
                    </div>

                
            </nav>
        </div>
        <div class="main">

           

            <div class="box-container">

                <div class="box box1">
                    <div class="text">
                        <h2 class="topic-heading">60.5k</h2>
                        <h2 class="topic">appeals submitted</h2>
                    </div>

               

                <div class="box box3">
                    <div class="text">
                        <h2 class="topic-heading">320</h2>
                        <h2 class="topic">Comments</h2>
                    </div>

               

                <div class="box box4">
                    <div class="text">
                        <h2 class="topic-heading">70</h2>
                        <h2 class="topic">pending</h2>
                    </div>

        

            <div class="report-container">
                <div class="report-header">
                    <h1 class="recent-submissions">Recent submissions</h1>
                    <button class="view">View All</button>
                </div>

                <div class="report-body">
                    <div class="report-topic-heading">
                        <h3 class="t-op">apeals</h3>
                        <h3 class="t-op">Comments</h3>
                        <h3 class="t-op">Status</h3>
                    </div>

                    <div class="items">
                        <div class="item1">
                            <h3 class="t-op-nextlvl">appeal 1</h3>
                            <h3 class="t-op-nextlvl">0</h3>
                            <h3 class="t-op-nextlvl label-tag">pending</h3>
                        </div>

                        <div class="item1">
                            <h3 class="t-op-nextlvl">appeal 2</h3>
                            <h3 class="t-op-nextlvl">0</h3>

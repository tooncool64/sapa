</head>
<body>
    <header>
        <div class="logo">
            <h1>Admin Dashboard</h1>
        </div>
        <div class="search-bar">
            <input type="text" placeholder="Search...">
        </div>
    </header>
    <div class="container">
        <nav class="sidebar">
            <ul>
                <li class="active"><a href="#" onclick="showSection('dashboard')">Dashboard</a></li>
                <li><a href="#" onclick="showSection('appeals')">Appeals</a></li>
                <li><a href="#" onclick="showSection('statusUpdate')">Status Update</a></li>
                <li><a href="#" onclick="showSection('profile')">Profile</a></li>
                <li><a href="#" onclick="logout()">Logout</a></li>
            </ul>
        </nav>
       <main class="main-content">
    <section id="dashboard" class="section active">
        <div class="cards">
            <div class="card">
                <h2>10</h2>
                <p>Appeals Submitted</p>
            </div>
            <div class="card">
                <h2>25</h2>
                <p>Comments</p>
            </div>
            <div class="card">
                <h2>10</h2>
                <p>Pending</p>
            </div>
        </div>
        <div class="recent-submissions">
            <h2>Recent Submissions</h2>
            <table>
                <thead>
                    <tr>
                        <th>Appeal</th>
                        <th>Comments</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Appeal 1</td>
                        <td>0</td>
                        <td>Pending</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
</main>

<style>
    .cards {
        display: flex;
        justify-content: space-around;
        margin-bottom: 20px;
    }
    .card {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }
    .card:hover {
        transform: scale(1.05);
    }
    .recent-submissions table {
        width: 100%;
        border-collapse: collapse;
    }
    .recent-submissions th, .recent-submissions td {
        border: 1px solid #ddd;
        padding: 8px;
    }
    .recent-submissions th {
        background: #f2f2f2;
        text-align: left;
}
</style>
<script>
    document.querySelectorAll('.recent-submissions tbody tr').forEach(row => {
        row.addEventListener('mouseenter', () => {
            row.style.backgroundColor = '#f1f1f1';
        });
        row.addEventListener('mouseleave', () => {
            row.style.backgroundColor = '';
        });
    });
</script>        
            <section id="appeals" class="section">
                <h2>Appeals</h2>
                <section id="appeals" class="section">
    <h2>Appeals</h2>
    <form id="appealForm">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="appeal">Your Appeal:</label>
        <textarea id="appeal" name="appeal" required></textarea>
        <button type="submit">Submit</button>
    </form>
</section>
<script>
    document.getElementById('appealForm').addEventListener('submit', function(event) {
        event.preventDefault();
        alert('Appeal submitted! Thank you.');
    });
</script>
            </section>
            <section id="statusUpdate" class="section">
                <section id="statusUpdate" class="section">
    <h2>Status Update</h2>
    <button class="accordion">Update 1</button>
    <div class="panel">
        <p>Status update details...</p>
    </div>
    <button class="accordion">Update 2</button>
    <div class="panel">
        <p>Status update details...</p>
    </div>
</section>
<script>
    var acc = document.getElementsByClassName('accordion');
    for (var i = 0; i < acc.length; i++) {
        acc[i].addEventListener('click', function() {
            this.classList.toggle('active');
            var panel = this.nextElementSibling;
            panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
        });
    }
</script>
<style>
    .accordion {
        cursor: pointer;
        padding: 10px;
        width: 100%;
        border: none;
        text-align: left;
        outline: none;
    }
    .panel {
        display: none;
        padding: 0 10px;
    }
</style>
            </section>
            <section id="profile" class="section">
                <section id="profile" class="section">
    <form id="profileForm">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="user@example.com">
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" value="123-456-7890">
        <button type="button" onclick="saveProfile()">Save</button>
    </form>
</section>
<script>
    function saveProfile() {
        var email = document.getElementById('email').value;
        var phone = document.getElementById('phone').value;
        alert('Profile saved! Email: ' + email + ', Phone: ' + phone);
    }
</script>
            </section>
        </main>
    </div>
    <script src="script.js">
</script>
</body>
</html>
